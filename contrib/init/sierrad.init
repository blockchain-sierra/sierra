#!/bin/bash
#
#  sierrad The Sierra Core server.
#
#
# chkconfig: 345 80 20
# description: sierrad
# processname: sierrad
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/sierrad, see below
if [ -f /etc/sysconfig/sierrad ]; then
        . /etc/sysconfig/sierrad
fi

RETVAL=0

prog=sierrad
# you can override the lockfile via BITCOIND_LOCKFILE in /etc/sysconfig/sierrad
lockfile=${BITCOIND_LOCKFILE-/var/lock/subsys/sierrad}

# sierrad defaults to /usr/bin/sierrad, override with BITCOIND_BIN
sierrad=${BITCOIND_BIN-/usr/bin/sierrad}

# sierrad opts default to -disablewallet, override with BITCOIND_OPTS
sierrad_opts=${BITCOIND_OPTS--disablewallet}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $sierrad $sierrad_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
